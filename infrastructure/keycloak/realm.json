{
  "realm": "Pulse",
  "enabled": true,
  "displayName": "Pulse Nightlife Platform",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>Pulse</span></div>",
  "accessTokenLifespan": 300,
  "refreshTokenMaxReuse": 0,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "registrationAllowed": true,
  "registrationEmailAsUsername": false,
  "rememberMe": false,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,  
  "clients": [
    {
      "clientId": "pulse-spa",
      "name": "Pulse SPA",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "redirectUris": [
        "https://localhost:7001/auth/callback",
        "https://localhost:5001/auth/callback", 
        "http://localhost:5173/auth/callback",
        "http://localhost:4173/auth/callback"
      ],
      "postLogoutRedirectUris": [
        "https://localhost:7001/",
        "https://localhost:5001/",
        "http://localhost:5173/",
        "http://localhost:4173/"
      ],
      "webOrigins": [
        "https://localhost:7001",
        "https://localhost:5001",
        "http://localhost:5173",
        "http://localhost:4173"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "defaultClientScopes": ["web-origins", "acr", "profile", "roles", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access", "pulse:api"]
    },
    {
      "clientId": "pulse-api",
      "name": "Pulse API Resource Server",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "defaultClientScopes": ["web-origins", "acr", "profile", "roles", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access", "pulse:api", "microprofile-jwt"]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "system-admin",
        "description": "System Administrator - Full system access and monitoring"
      },
      {
        "name": "content-manager",
        "description": "Content Manager - Content management across all venues"
      },
      {
        "name": "authenticated-user",
        "description": "Authenticated User - Basic enhanced features"
      }
    ]
  },
  "users": [
    {
      "username": "admin@pulse.com",
      "email": "admin@pulse.com",
      "firstName": "System",
      "lastName": "Administrator",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin123!",
          "temporary": false
        }
      ],
      "realmRoles": ["system-admin", "authenticated-user"]
    },
    {
      "username": "content@pulse.com",
      "email": "content@pulse.com",
      "firstName": "Content",
      "lastName": "Manager",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "content123!",
          "temporary": false
        }
      ],
      "realmRoles": ["content-manager", "authenticated-user"]
    }
  ],
  "clientScopes": [
    {
      "name": "pulse:api",
      "description": "Access to Pulse API endpoints",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true",
        "consent.screen.text": "Access to Pulse API"
      },
      "protocolMappers": [
        {
          "name": "pulse api audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "pulse-api",
            "introspection.token.claim": "true",
            "userinfo.token.claim": "false",
            "id.token.claim": "false",
            "lightweight.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "defaultDefaultClientScopes": ["profile", "email", "roles", "web-origins", "acr"],
  "defaultOptionalClientScopes": ["offline_access", "address", "phone", "microprofile-jwt", "pulse:api"]
}
